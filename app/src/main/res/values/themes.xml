<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EverAfter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Set our custom background -->
        <item name="android:background">@drawable/rounded_button</item>
        <!-- Reduce the minimum width so the button doesn't stretch too wide -->
        <item name="android:minWidth">0dp</item>
        <!-- You can also remove extra padding if necessary -->
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <!-- Set text color and style -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.EverAfter" parent="Base.Theme.EverAfter" />
</resources>